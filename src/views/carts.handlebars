
<nav>
  <div class='desktopNavbar'>
   
      <div>
          <div style="text-align: left;>
               <a onclick=" location.href='/products'"><img src='https://res.cloudinary.com/abrahama19/image/upload/v1691861389/logoPS5_ryhtjh.jpg' alt='logo' width='200px' style='margin-left: 1.4rem;' /></a>
               </div>
                 <span class='desktopNavLinkLogo'>Ps5 Web Store</span>
            </div>



    <div class='desktopNavRight'>
      {{#if session}}
        <a href='/api/sessions/current' class='cartInfo' id='{{session.cartID}}'><img src='/images/login.png' alt='Icono login' /><span class='desktopNavIcon'>{{session.firstName}}</span></a>
        <a id='logout-btn' type='submit' class='desktopNavIcon'><i class='material-icons'>exit_to_app</i>Salir</a>
      {{else}}
        <div class='desktopNavLog'>
          <a href='/?login=true'><img src='/images/login.png' alt='Icono login' /><span class='desktopNavLink'>Login</span></a>
        </div>
        <div class='desktopNavLog'>
          <a href='/?register=true' class='desktopNavLink'>Registro</a>
        </div>
      {{/if}}
   
   
      <div>
        <a onclick="location.href='/carts/{{session.cartID}}'"><img class='desktopNavIcon' src='/images/carrito.png' alt='carrito' /></a>
      </div>
  
    </div>
    {{#if isAdmin}}
      <div class='admin-button'>
        <button class='button is-info' onclick="location.href='http://localhost:8080/api/users/adminControl'">
          <span class='icon'><i class='material-icons'>admin_panel_settings</i></span>
          <span>Users Database</span>
        </button>
      </div>
    {{/if}}
  </div>
</nav>
{{#if cart.length}}
  <table class='table__cart'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Qauntity</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each cart}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td>{{this.quantity}}</td>
          <td class='infoProduct' id='{{this._id}}'></td>
          <td><button onclick="removeProductFromCart('{{userCartId}}', '{{this.product._id}}')">Delete</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <div class='cartButtons'>
    <button class='averageButton button is-primary mt-3' onclick='clearCart()'><p>Empty Cart</p></button>
    <a href='/carts/{{userCartId}}/purchase' class='averageButton button is-primary mt-3'>
      <span>Checkout</span></a>
    <button class='averageButton button is-primary mt-3' onclick="location.href='/products'"><span class='icon'>
        <i class='material-icons'>arrow_back</i></span><span>Go to products page</span>
    </button>
  </div>
{{else}}
<div class="centered-div">
  <p>EMPTY CART</p>
  <button class='averageButton button is-primary mt-3' onclick="location.href='/products'"><span class='icon'>
      <i class='material-icons'>arrow_back</i></span><span>Go to products page</span>
  </button>
  </div>
{{/if}}
<a class='infoCart' id='{{userCartId}}'></a>
<div class='chatButton'>
  <button onclick="location.href='/chat'">
    <i class='material-icons'>chat</i></button>
</div>

<script src='/js/cart.js'></script>
<script src='/js/profile.js'></script>
<script src='/js/products.js'></script>
<script src='/js/home.js'></script>
<script src='/js/searchbar.js'></script>

