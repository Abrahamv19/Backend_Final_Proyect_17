<div class='container login centered-div' style="padding-top: 3rem;">
<div class='container login'>
  <div class='card col-10 cardsBorder'>
    <div class='card-header card-header-dashboard-style'>
      <h2>SUCCESSFUL PURCHASE</h2>
    </div>
    <div class='card-body'>
      <h5 class='card-title'>Your Order</h5>
      <div class>
        <div class='cardsBorder-dashboard col-4'>

          {{#each ticket}}
            <div class='card-body'>
              <p class='card-text'> {{product.title}} </p>
              <p class='card-text'>Quantity: {{quantity}} </p>
            </div>
          {{/each}}
          <p class='card-text'><b>GRAND TOTAL</b> ${{totalCart}}</p>
        </div>
      </div>
    </div>
    <a class='averageButton button is-primary mt-3' href='/products'>Go to products page</a>
  </div>
</div>
</div>